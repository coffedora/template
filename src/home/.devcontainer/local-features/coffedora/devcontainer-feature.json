{
    "id": "coffedora",
    "version": "0.1.0",
    "name": "Setup Fedora-minimal as devcontainer",

    "options": {
        "username": {
            "type": "string",
            "proposals": [
                "devcontainer",
                "vscode",
                "codespace",
                "none"
            ],
            "default": "automatic",
            "description": "Create User. If in automatic mode, determine if a user already exists, if not use vscode"
        },
        "upgradePackages": {
            "type": "boolean",
            "default": true,
            "description": "Upgrade DNF packages"
        },
        "useruid": {
            "type": "string",
            "proposals": [
                "1001",
                "automatic"
            ],
            "default": "automatic",
            "description": "Enter UID for non-root user"
        },
        "usergid": {
            "type": "string",
            "proposals": [
                "1001",
                "automatic"
            ],
            "default": "automatic",
            "description": "Enter GID for non-root user"
        },
        "wslReady": {
            "type": "boolean",
            "default": true,
            "description": "Create /etc/wsl.conf to enable interop with Windows when imported into WSL2"
        },
        "brewReady": {
            "type": "boolean",
            "default": true,
            "description": "Runs Homebrew installation and add it to the path"
        },
        "userShell": {
            "type": "string",
            "default": "Install additional shell and set as Users default shell?",
            "enum": [
                "bash",
                "zsh",
                "fish"
            ],
            "description": "zsh"
        },
        "docker": {
            "type": "boolean",
            "default": true,
            "description": "Add packages from non-free Debian repository? (Debian only)"
        }
    }
    // "remoteEnv": {
    //     "DOCKER_HOST": "$(docker context inspect --format '{{.Endpoints.docker.Host}}'))",
    //     "DOCKER_BUILDKIT": "1"
    // }
}