{
	"name": "Coffedora Go-Workspace",
	"image": "quay.io/fedora/fedora-minimal:${templateOption:imageVariant}",
	// ðŸ‘‡ Local Features will be distributed via template and Dev Container compatibility on top of a minimal image
	// Name is required. Set "Username":"root" to skip user Creation.
	// Unset values, empty strings or  string of value "false" will skip the part of the feature requireded the value. 
	// More info: https://containers.dev/implementors/features.
	"features": {
		"./local-features/coffedora": {
			"userName":"${templateOption:user}",
			"userShell": "${templateOption:shell}",
			"dockerHostEnv": "${templateOption:docker}",
			"wslReady": "${templateOption:wsl}",
			"brewReady": "${templateOption:brew}"
		}
	},
	// Will use the local environment variables to pass to the container. Unset variables will be empty
	"remoteEnv": {
		"DOCKER_HOST": "$(docker context inspect --format \"{{.Endpoints.docker.Host}}\"))",
		"GITHUB_USERNAME": "${localEnv:GITHUB_USERNAME}",
		"GH_TOKEN": "${localEnv:GH_TOKEN}"
	},
	"runArgs": [
		"--hostname",
		"devcontainer-${templateOption:user}"
		// ðŸ‘‡ Uncomment to use an env file instead of passing the variables directly.
		// "--env-file",
		// "${localWorkspaceFolder}/.devcontainer/.env"
	],

	// ðŸ‘‡ Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],
	// ðŸ‘‡ Use 'postCreateCommand' to run commands after the container is created.
	// ðŸ‘‡ Configure tool-specific properties.
	
	//  "comment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
	"remoteUser": "${templateOption:user}"
}