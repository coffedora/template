{
    "id": "init",
    "version": "0.1.0",
    "name": "Fedora Codespace",
    "description": "Fedora Devcontainer designed for Cloud",
    "documentationURL": "https://github.com/d1sev/template/tree/main/src/init",
    "licenseURL": "https://github.com/d1sev/template/blob/main/LICENSE",
    "options": {
        "imageVariant": {
            "type": "string",
            "description": "Fedora version:",
            "proposals": [
                "39",
                "40",
                "rawhide"
            ],
            "default": "39"
        },
        "user": {
            "type": "string",
            "description": "Wheel User Name to login:",
            "proposals": [
                "vscode",
                "codespace",
                "devcontainer",
                "coffe"
            ],
            "default": "vscode"
        },
        "shell": {
            "type": "string",
            "description": "Set Users loginshell",
            "enum": [
                "bash",
                "zsh",
                "fish"
            ],
            "default": "zsh"
        },
        "uid": {
            "type": "string",
            "description": "Set UID for new wheel user",
            "proposals": [
                "1000",
                "1001"
            ],
            "default": "zsh"
        },
        "homebrew": {
            "type": "boolean",
            "description": "Perinstall Homebrew package Manager",
            "default": "false"
        }
    },
    "platforms": [
        "Fedora"
    ]
}
